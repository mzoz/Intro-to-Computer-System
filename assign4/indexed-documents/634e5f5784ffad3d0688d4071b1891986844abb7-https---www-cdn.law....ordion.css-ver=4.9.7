#sls-accordion-slider .accordion-slider {
    margin-bottom: 88px;
}

.sls-as-nav {
    position: absolute;
    top: 100%;
    width: 100%;
    padding: 10px 0;
}

#sls-as-nav button {
    background: none;
    border: 0;
    color: inherit;
    /* cursor: default; */
    font: inherit;
    line-height: inherit;
    overflow: visible;
    padding: 0;
    line-height: 1;
    font-size: 16px;
}

#sls-as-controls,
.as-pagination-buttons {
    padding: 0;
}

#sls-as-controls {
    margin: 0;
}

#sls-as-controls li {
    margin: 0;
    padding: 0;
}
#sls-as-controls li:before {
    content: none;
}

#sls-as-controls .sls-as-prev {
    float: left;
    margin-left: 10px;
}
#sls-as-controls .sls-as-next {
    float: right;
    margin-right: 10px;
}

#sls-as-controls button {
    padding: 10px 0;
}

.sls-as-prev button {
    text-align: left;
}
.sls-as-next button {
    text-align: right;
}

#sls-as-controls button:hover,
#sls-as-controls button:focus {
    color: #b30000;
}

#sls-as-controls button:before,
#sls-as-controls button:after {
    font-family: stanford;
    speak: none;
    font-style: normal;
    line-height: inherit;
    font-weight: 400;
    font-variant: normal;
    text-transform: none;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: auto;
    font-size: 26px;
    vertical-align: top;
}

#sls-as-controls .sls-as-prev button:before {
    content: "\edc1";
    margin-right: 10px;
}
#sls-as-controls .sls-as-next button:after {
    content: "\edb9";
    margin-left: 10px;
}

.sls-as-controls-text {
    display: inline-block;
    width: 70px;
    position: relative;
    top: -2px;
}

.sls-as-nav .as-pagination-buttons {
    position: static;
    width: auto;
    margin: 0 132px;
}
.sls-as-nav .as-pagination-button {
    margin: 12px 10px;
    width: auto;
    height: auto;
    background: none;
    border-radius: 0;
    border: none;
}
#sls-as-nav .as-pagination-button button {
    width: 14px;
    height: 14px;
    background: #bfbeba;
    border-radius: 100%;
    border: 2px solid #bfbeba;
}
#sls-as-nav .as-pagination-button:hover button,
#sls-as-nav .as-pagination-button button:focus,
#sls-as-nav .as-pagination-button.as-selected button {
    border-color: #b30000;
    background: none;
}

.sls-as-current-page-status, .sls-as-liveregion {
    text-align: center;
}

@media screen and (max-width: 770px) {
    .sls-as-controls-text,
    .sls-as-nav .as-pagination-buttons {
        display: none;
    }
    .sls-as-current-page-status {
        padding: 10px 0;
    }
}