.post-type-archive .sl-search,
.blog .sl-search {
    float: left;
    width: 78%;
}

.post-type-archive .courses-filter,
.blog .courses-filter {
    float: left;
    margin-left: 2%;
    position: relative;
    width: 20%;
}
.filter-toggle-active.post-type-archive .courses-filter:before,
.filter-toggle-active.blog .courses-filter:before {
    content: '';
    position: absolute;
    width: calc(100% - 2px);
    left: 0;
    right: 0;
    height: 3px;
    background-color: white;
    z-index: 7;
    top: 75px;
}


.post-type-archive .courses-filter-toggle,
.blog .courses-filter-toggle  {
    border: 2px solid #e2e2e0;
    border-radius: 2px;
    color: #ADACAE;
    font-size: 26px;
    font-variant: small-caps;
    text-align: center;
    cursor: pointer;
    transition: background 0.15s ease-in-out, color 0.15s ease-in-out;
    background-color: transparent;
    padding: 0;
    display: block;
    width: 100%;
    position: relative;
    z-index: 6;
    height: 75px;
    line-height: 75px;
}
.filter-toggle-active.post-type-archive .courses-filter-toggle,
.post-type-archive .courses-filter-toggle:hover,
.post-type-archive .courses-filter-toggle:focus,
.filter-toggle-active.blog .courses-filter-toggle,
.blog .courses-filter-toggle:hover,
.blog .courses-filter-toggle:focus  {
    background-color: white;
    color: #000;
}
.filter-toggle-active.post-type-archive .courses-filter-toggle,
.filter-toggle-active.blog .courses-filter-toggle {
    border-bottom: 0;
    box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.25);
}
.post-type-archive .courses-filter-toggle:focus,
.blog .courses-filter-toggle:focus {
    outline: 1px dotted;
}


.post-type-archive .courses-filter-inner,
.blog .courses-filter-inner {
    background: white;
    border: 2px solid #e2e2e0;
    box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.25);
    display: none;
    right: 0;
    position: absolute;
    top: calc(100% - 2px);
    z-index: 5;
    width: 380px;
    border-radius: 2px 0 2px 2px;
    max-height: 500px;
    overflow: auto;
}


.post-type-archive .loop-filters,
.blog .loop-filters {
    padding-bottom: 20px;
    margin-bottom: 20px;
    margin-top: -21px;
}


.post-type-archive .courses-filter-inner .selectize-mask,
.blog .courses-filter-inner .selectize-mask {
    border: none !important;
    box-shadow: none !important;
    margin: 0 !important;
    padding: 0 !important;
    width: 100% !important;
}

.post-type-archive .courses-filter-inner .selectize-control,
.post-type-archive .courses-filter-inner .lf-input-wrapper,
.blog .courses-filter-inner .selectize-control,
.blog .courses-filter-inner .lf-input-wrapper{
    display: block !important;
    float: none !important;
    //background: #f4f3f0;
}

.post-type-archive .courses-filter-inner .lf-input-wrapper:after,
.blog .courses-filter-inner .lf-input-wrapper:after {
    display: none;
}

.post-type-archive .courses-filter-inner .lf-input-wrapper button:after,
.blog .courses-filter-inner .lf-input-wrapper button:after {
    content: ' ';
    display: block;
    position: absolute;
    top: 50%;
    right: 15px;
    margin-top: -3px;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 5px 5px 0 5px;
    border-color: #9a9c9a transparent transparent transparent;
}


.post-type-archive .loop-filters .selectize-control,
.blog .loop-filters .selectize-control {
    margin-right: 0;
}

.post-type-archive .courses-filter-inner .selectize-dropdown,
.blog .courses-filter-inner .selectize-dropdown{
    //display: block !important;
    position: relative !important;
    top: 0 !important;
    //visibility: visible !important;
    border: 0;
}

.post-type-archive .courses-filter-inner .selectize-mask,
.blog .courses-filter-inner .selectize-mask{
    height: auto !important;
}


.post-type-archive .courses-filter-inner .lf-button-list,
.blog .courses-filter-inner .lf-button-list{
    white-space: normal !important;
    margin-top: 5px;
}

.post-type-archive .courses-filter-inner #course-unit-range-inner,
.blog .courses-filter-inner #course-unit-range-inner {
    padding-bottom: 30px;
}

.post-type-archive .courses-filter-inner .lf-input-content,
.blog .courses-filter-inner .lf-input-content {
    border: none;
    box-shadow: none;
    margin: 0;
    padding: 0 0 0;
    position: relative;
    width: 100%;
}


.post-type-archive .sls-filter-label,
.post-type-archive .lf-input-label,
.blog .sls-filter-label,
.blog .lf-input-label {
    border-top: 1px solid #ddd;
    padding-top: 20px;
    margin-top: 20px;
}




.filter-tooltip-icon {
    color: #9a9c9a;
    cursor: pointer;
    display: block;
    width: auto;
    padding: 0;
    border: 0;
    vertical-align: middle;
    margin-left: 4px;
    transition: all 0.15s ease-in-out;
    background-color: transparent;
    line-height: 1;
    position: absolute;
    right: 0;
    font-size: 15px;
    top: 4px;
    z-index: 1;
}
.filter-tooltip-icon:hover,
.filter-tooltip-icon:focus {
    color: black;
}
.filter-tooltip-icon:focus {
    outline: 1px dotted;
}

.loop-filter-tooltip-close {
    background-color: transparent;
    padding: 0;
    height: 33px;
    width: 34px;
    color: #9a9c9a;
    line-height: 40px;
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    transition: all 0.15s ease-in-out;
    border: 0;
    font-size: 19px;
    text-align: center;
}
.loop-filter-tooltip-close:hover,
.loop-filter-tooltip-close:focus {
    color: black;
}
.loop-filter-tooltip-close:focus {
    outline: 1px dotted;
}






.post-type-archive .sls-filter-label,
.blog .sls-filter-label,
.post-type-archive .lf-input-label,
.blog .post-type-archive,
.post-type-archive .courses-filter-inner .lf-range-inputs .range-slider,
.blog .courses-filter-inner .lf-range-inputs .range-slider,
.post-type-archive .courses-filter-inner .lf-button-list,
.blog .courses-filter-inner .lf-button-list,
.post-type-archive .loop-filters .selectize-dropdown,
.blog .loop-filters .selectize-dropdown {
    padding-left: 15px;
    padding-right: 15px;
    margin-right: auto;
    margin-left: auto;
    width: 100% !important;
}
.post-type-archive .courses-filter-inner .lf-range-inputs .range-slider,
.blog .courses-filter-inner .lf-range-inputs .range-slider {
    width: calc(100% - 50px) !important;
}


.filter-toggle-button-wrapper {
    overflow: hidden;
}
.filter-toggle-button {
    float: left;
    width: 50%;
    border-right: 1px solid white;
}
.filter-toggle-button ~ .filter-toggle-button {
    border-left: 1px solid white;
    border-right: 0;
}


@media (max-width: 768px) {
    .post-type-archive .sl-search,
    .blog .sl-search {
        width: 100%;
    }
    .post-type-archive .courses-filter,
    .blog .courses-filter {
        margin-left: 0;
        margin-top: 2px;
        padding-bottom: 38px;
        width: 100%;
    }
    .filter-toggle-active.post-type-archive .courses-filter:before,
    .filter-toggle-active.blog .courses-filter:before {
        top: 60px;
        width: calc(100% - 4px);
        left: 2px;
    }
    .post-type-archive .courses-filter-toggle,
    .blog .courses-filter-toggle  {
        height: 60px;
        line-height: 60px;
        font-size: 22px;
    }
    .post-type-archive .loop-filters,
    .blog .loop-filters {
        margin-top: -19px;
    }
    .post-type-archive .courses-filter-inner,
    .blog .courses-filter-inner {
        position: relative;
        width: auto;
        max-height: none;
        overflow: visible;
    }
    .post-type-archive .lf-input-wrapper,
    .post-type-archive  .loop-filters .selectize-control,
    .blog .loop-filters .selectize-control,
    .blog .lf-input-wrapper {
        border-top: 0;
    }
}

@media (max-width: 1048px) {
    .post-type-archive .courses-filter-inner, .blog .courses-filter-inner {
        left: auto;
        right: 0;
    }
}
